# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/mono"

# Authentication
JWT_SECRET="your-secure-jwt-secret-change-this"
NEXTAUTH_SECRET="your-secure-nextauth-secret-change-this"
NEXTAUTH_URL="http://localhost:3000"

# Redis
REDIS_URL="redis://localhost:6379"

# Domain Configuration (NEW)
# Development domains (using .monolocal.com for local testing)
NEXT_PUBLIC_ADMIN_DOMAIN="http://app.monolocal.com:3000"
NEXT_PUBLIC_API_DOMAIN="http://api.monolocal.com:3001"
NEXT_PUBLIC_CDN_DOMAIN="http://cdn.monolocal.com:3000"
NEXT_PUBLIC_PUBLIC_BASE="http://{tenant}.monolocal.com:3000"

# Production domains (override in production)
# NEXT_PUBLIC_ADMIN_DOMAIN="https://app.monoplatform.com"
# NEXT_PUBLIC_API_DOMAIN="https://api.monoplatform.com"
# NEXT_PUBLIC_CDN_DOMAIN="https://cdn.monoplatform.com"
# NEXT_PUBLIC_PUBLIC_BASE="https://{tenant}.monoplatform.com"

# API Configuration
API_PORT=3001
API_HOST="0.0.0.0"

# Email (Mailpit for development)
SMTP_HOST="localhost"
SMTP_PORT="1025"
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@monoplatform.com"

# Monitoring
PROMETHEUS_ENABLED="true"
GRAFANA_URL="http://localhost:5005"

# Feature Flags
ENABLE_DOMAIN_ROUTING="true"
ENABLE_CUSTOM_DOMAINS="false"
ENABLE_SUBDOMAIN_TENANTS="true"

# Development
NODE_ENV="development"

# N8N Integration
N8N_DOCS_WEBHOOK_URL="http://localhost:5678/webhook/docs-approval"

# Mattermost Integration (configure in N8N)
# MATTERMOST_WEBHOOK_URL="https://your-mattermost.com/hooks/xxxxx"
