{
  "limit_types": {
    "storage": {
      "name": "Storage Limits",
      "description": "File storage and media upload limits",
      "units": ["MB", "GB", "TB"],
      "default_unit": "GB",
      "enforcement": "hard",
      "category": "storage"
    },
    "users": {
      "name": "User Limits",
      "description": "Total number of individual users in the system",
      "units": ["users"],
      "default_unit": "users",
      "enforcement": "block",
      "category": "access"
    },
    "seats": {
      "name": "Seat Limits",
      "description": "Licensed seats or concurrent active users",
      "units": ["seats"],
      "default_unit": "seats",
      "enforcement": "block",
      "category": "access"
    },
    "accounts": {
      "name": "Account Limits",
      "description": "Number of separate account entities (agencies, companies)",
      "units": ["accounts"],
      "default_unit": "accounts",
      "enforcement": "block",
      "category": "access"
    },
    "api_calls": {
      "name": "API Rate Limits",
      "description": "API requests per time period",
      "units": ["per_hour", "per_day", "per_month"],
      "default_unit": "per_day",
      "enforcement": "throttle",
      "category": "usage"
    },
    "media_files": {
      "name": "Media File Limits",
      "description": "Number of images, videos, or media files",
      "units": ["files", "images", "videos"],
      "default_unit": "images",
      "enforcement": "block",
      "category": "content"
    },
    "portfolios": {
      "name": "Portfolio Limits",
      "description": "Number of portfolios or galleries",
      "units": ["portfolios", "galleries", "collections"],
      "default_unit": "portfolios",
      "enforcement": "block",
      "category": "content"
    },
    "projects": {
      "name": "Project Limits",
      "description": "Active projects (all types combined)",
      "units": ["projects"],
      "default_unit": "projects",
      "enforcement": "block",
      "category": "business"
    },
    "jobs": {
      "name": "Job Postings",
      "description": "Active job postings and opportunities",
      "units": ["jobs"],
      "default_unit": "jobs",
      "enforcement": "block",
      "category": "business"
    },
    "castings": {
      "name": "Casting Calls",
      "description": "Active casting calls and auditions",
      "units": ["castings"],
      "default_unit": "castings",
      "enforcement": "block",
      "category": "business"
    },
    "notifications": {
      "name": "Notification Limits",
      "description": "Email, SMS, or push notifications",
      "units": ["per_day", "per_month", "unlimited"],
      "default_unit": "per_month",
      "enforcement": "queue",
      "category": "communication"
    },
    "bandwidth": {
      "name": "Bandwidth Limits",
      "description": "Data transfer for media streaming",
      "units": ["GB", "TB", "unlimited"],
      "default_unit": "GB",
      "enforcement": "throttle",
      "category": "performance"
    },
    "custom_fields": {
      "name": "Custom Field Limits",
      "description": "Custom form fields and schema extensions",
      "units": ["fields", "schemas", "forms"],
      "default_unit": "fields",
      "enforcement": "block",
      "category": "customization"
    },
    "integrations": {
      "name": "Integration Limits",
      "description": "Third-party integrations and webhooks",
      "units": ["integrations", "webhooks", "endpoints"],
      "default_unit": "integrations",
      "enforcement": "block",
      "category": "connectivity"
    }
  },
