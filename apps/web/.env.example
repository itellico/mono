# Next.js Frontend Environment Variables
# Copy this file to .env.local for development

# ========================================
# Public Environment Variables
# These are exposed to the browser
# ========================================

# API URL for client-side requests
NEXT_PUBLIC_API_URL=http://localhost:3001

# Application name and branding
NEXT_PUBLIC_APP_NAME=itellico
NEXT_PUBLIC_APP_TITLE="itellico - Multi-Tenant Marketplace"

# Feature flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEMO_MODE=false

# External services (safe to expose)
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=

# ========================================
# Server-Side Environment Variables
# These are only available in Next.js server-side code
# ========================================

# Internal API URL for SSR/SSG
API_URL_INTERNAL=http://localhost:3001

# Session configuration
SESSION_SECRET=your-session-secret-here

# Next.js specific
NEXT_TELEMETRY_DISABLED=1

# Development tools
ANALYZE=false